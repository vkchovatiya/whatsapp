<odoo>
    <!-- Recreate the external layout report -->
    <record id="web_external_layout" model="ir.actions.report">
        <field name="name">External Layout</field>
        <field name="model">ir.ui.view</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">web.external_layout</field>
    </record>

    <!-- Custom Report Action -->
    <record id="action_report_custom_invoice" model="ir.actions.report">
        <field name="name">Custom Invoice PDF</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">meta_whatsapp_invoice.report_custom_invoice</field>
        <field name="print_report_name">'Invoice - %s' % (object.name)</field>
    </record>

    <!-- Custom Report Template -->
    <template id="report_custom_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><t t-if="doc.move_type == 'out_invoice'">Invoice</t><t t-if="doc.move_type == 'out_refund'">Credit Note</t>: <span t-field="doc.name"/></h2>
                        <p>Customer: <span t-field="doc.partner_id.name"/></p>
                        <p>Date: <span t-field="doc.invoice_date"/></p>
                        <p>Due Date: <span t-field="doc.invoice_date_due"/></p>
                        <p>Total: <span t-field="doc.amount_total"/></p>
                        <p>State: <span t-field="doc.state"/></p>
                        <h3>Invoice Lines</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.invoice_line_ids" t-as="line">
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td><span t-field="line.quantity"/></td>
                                    <td><span t-field="line.price_unit"/></td>
                                    <td><span t-field="line.price_subtotal"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>