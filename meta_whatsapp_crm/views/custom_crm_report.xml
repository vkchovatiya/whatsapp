<odoo>
    <!-- Recreate the external layout report -->
    <record id="web_external_layout" model="ir.actions.report">
        <field name="name">External Layout</field>
        <field name="model">ir.ui.view</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">web.external_layout</field>
    </record>

    <!-- Custom Report Action -->
    <record id="action_report_custom_crm_lead" model="ir.actions.report">
        <field name="name">Custom CRM Lead PDF</field>
        <field name="model">crm.lead</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">meta_whatsapp_crm.report_custom_crm_lead</field>
        <field name="print_report_name">'Lead - %s' % (object.name)</field>
    </record>

    <!-- Custom Report Template -->
    <template id="report_custom_crm_lead">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2><t t-if="doc.type == 'opportunity'">Opportunity</t><t t-if="doc.type == 'lead'">Lead</t>: <span t-field="doc.name"/></h2>
                        <p>Contact: <span t-field="doc.partner_id.name"/></p>
                        <p>Expected Revenue: <span t-field="doc.expected_revenue"/></p>
                        <p>Probability: <span t-field="doc.probability"/>%</p>
                        <p>Stage: <span t-field="doc.stage_id.name"/></p>
                        <p>Salesperson: <span t-field="doc.user_id.name"/></p>
                        <p>Company: <span t-field="doc.company_id.name"/></p>
                        <h3>Details</h3>
                        <p>Description: <span t-field="doc.description"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>