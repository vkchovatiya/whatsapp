<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form_whatsapp" model="ir.ui.view">
        <field name="name">crm.lead.form.whatsapp</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_set_won_rainbowman']" position="after">
                <button name="action_send_whatsapp" string="Send by WhatsApp" type="object" class="btn-primary"
                        icon="fa-whatsapp"/>
            </xpath>
        </field>
    </record>
</odoo>