<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_whatsapp" model="ir.ui.view">
        <field name="name">purchase.order.form.whatsapp</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_rfq_send']" position="after">
                <button name="action_send_whatsapp" string="Send by WhatsApp" type="object" class="btn-primary"
                        icon="fa-whatsapp"/>
            </xpath>
        </field>
    </record>
</odoo>