<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form_whatsapp" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.whatsapp</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_helpdesk_ticket']" position="after">
                <button name="action_send_whatsapp" string="Send by WhatsApp" type="object" class="btn-primary"
                        icon="fa-whatsapp"/>
            </xpath>
        </field>
    </record>
</odoo>