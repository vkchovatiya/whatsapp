<odoo>
    <!-- Recreate the external layout report -->
    <record id="web_external_layout" model="ir.actions.report">
        <field name="name">External Layout</field>
        <field name="model">ir.ui.view</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">web.external_layout</field>
    </record>

    <!-- Custom Report Action -->
    <record id="action_report_custom_helpdesk_ticket" model="ir.actions.report">
        <field name="name">Custom Helpdesk Ticket PDF</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">meta_whatsapp_helpdesk.report_custom_helpdesk_ticket</field>
        <field name="print_report_name">'Ticket - %s' % (object.name)</field>
    </record>

    <!-- Custom Report Template -->
    <template id="report_custom_helpdesk_ticket">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Ticket: <span t-field="doc.name"/></h2>
                        <p>Customer: <span t-field="doc.partner_id.name"/></p>
                        <p>Subject: <span t-field="doc.name"/></p>
                        <p>Priority: <span t-field="doc.priority"/></p>
                        <p>Stage: <span t-field="doc.stage_id.name"/></p>
                        <p>Team: <span t-field="doc.team_id.name"/></p>
                        <p>Assigned To: <span t-field="doc.user_id.name"/></p>
                        <h3>Description</h3>
                        <p><span t-field="doc.description"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>