<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_whatsapp_sale_wizard_form" model="ir.ui.view">
        <field name="name">whatsapp.sale.wizard.form</field>
        <field name="model">whatsapp.sale.wizard</field>
        <field name="arch" type="xml">
            <form string="Compose WhatsApp Message">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="phone" required="1"/>
                    <field name="attach_pdf"/>
                    <field name="config_id" options="{'no_create': True}"/>
                    <field name="template_id" options="{'no_create': True}"/>
                    <field name="message" widget="text" placeholder="Enter your message or select a template"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </group>
                <footer>
                    <button name="action_send_message" string="Send" type="object" class="btn-primary" icon="fa-whatsapp"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>