<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CustomBUTTON" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension" owl="1">


        <xpath expr="//button[contains(@class, 'button print btn btn-lg btn-secondary w-100 py-3')]" position="after">
            <button class="button send-whatsapp btn btn-lg btn-primary w-100 py-3" t-on-click="onSendWhatsApp">
                <i class="fa fa-whatsapp me-1"/> Send by WhatsApp
            </button>
        </xpath>
    </t>
</templates>
