<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_messaging_lists_tree_view" model="ir.ui.view">
        <field name="name">WhatsApp Messaging Lists</field>
        <field name="model">whatsapp.messaging.lists</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
<!--                <field name="whatsapp_number"/>-->
            </list>
        </field>
    </record>
    <record id="whatsapp_messaging_lists_form_view" model="ir.ui.view">
        <field name="name">WhatsApp Messaging Lists</field>
        <field name="model">whatsapp.messaging.lists</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="msg_lists_recipients_model_id"/>
                        <field name="message_list_contacts_ids" widget="many2many_tags" invisible="lists_selected_model != 'whatsapp.messaging.lists.contacts'"/>
                        <field name="partner_ids" widget="many2many_tags" invisible="lists_selected_model == 'whatsapp.messaging.lists.contacts'"/>
                    </group>
                    <group>
                        <field name="lists_selected_model" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
