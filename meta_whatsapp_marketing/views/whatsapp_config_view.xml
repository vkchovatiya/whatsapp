<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_marketing_campaign_tree_view" model="ir.ui.view">
        <field name="name">whatsapp.marketing.campaign.tree</field>
        <field name="model">whatsapp.marketing.campaign</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="in_queue_percentage" widget='progressbar'/>
                <field name="sent_percentage" widget='progressbar'/>
                <field name="read_percentage" widget='progressbar'/>
                <field name="fail_percentage" widget='progressbar'/>
                <field name="delivered_percentage" widget='progressbar'/>
                <field name="received_percentage" widget='progressbar'/>
                <field name="recipients_model_id"/>
            </list>
        </field>
    </record>

    <record id="whatsapp_marketing_campaign_form_view" model="ir.ui.view">
        <field name="name">whatsapp.marketing.campaign.form</field>
        <field name="model">whatsapp.marketing.campaign</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_send_now" string="Send Now" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_schedule" string="Schedule" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state == 'sent'"/>
                    <button name="action_test" string="Test" type="object"
                            invisible="state != 'draft'"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="in_queue_percentage" string="In Queue" widget="percentpie"/>
                        </button>
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="sent_percentage" string="Sent" widget="percentpie"/>
                        </button>
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="delivered_percentage" string="Delivered" widget="percentpie"/>
                        </button>
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="received_percentage" string="Received" widget="percentpie"/>
                        </button>
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="read_percentage" string="Read" widget="percentpie"/>
                        </button>
                        <button name="action_test" type="object" class="oe_stat_button">
                            <field name="fail_percentage" string="Fail" widget="percentpie"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="recipients_model_id" options="{'no_create': True}"/>
                            <field name="use_mailing_domain" invisible="selected_model == 'whatsapp.messaging.lists'"/>
                            <field name="mailing_domain" widget="domain"
                                   options="{'model': 'selected_model', 'foldable': true}"
                                   invisible="selected_model == 'whatsapp.messaging.lists' or use_mailing_domain == False"
                                   readonly="state in ('in_queue', 'scheduled', 'sent')"/>
                            <field name="company_id"/>
                            <field name="template_id"/>
                        </group>
                        <group>
                            <field name="partner_ids" widget="many2many_tags" invisible="selected_model == 'whatsapp.messaging.lists' or use_mailing_domain == True"/>
                            <field name="messaging_list_id" invisible="selected_model != 'whatsapp.messaging.lists'"/>
                            <field name="selected_model"/>
                            <field name="config_id"/>
                            <field name="scheduled_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="message_preview"/>
                        </page>
                        <page string="Whatsapp Messages">
                            <field name="message_history_ids"/>
                        </page>
                        <page string="Contact Messages History">
                            <field name="contact_message_summary">
                                <list>
                                    <field name="partner_id" string="Contact"/>
                                    <field name="whatsapp_number" string="WhatsApp Number"/>
                                    <field name="message_count" string="Number of Messages"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_whatsapp_campaign_schedule_wizard_form" model="ir.ui.view">
        <field name="name">whatsapp.campaign.schedule.wizard.form</field>
        <field name="model">whatsapp.campaign.schedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Schedule Campaign">
                <group>
                    <field name="campaign_id" readonly="1"/>
                    <field name="scheduled_date" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm_schedule" string="Schedule" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>