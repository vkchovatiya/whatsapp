<odoo>
    <!-- Recreate the external layout report -->
    <record id="web_external_layout" model="ir.actions.report">
        <field name="name">External Layout</field>
        <field name="model">ir.ui.view</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">web.external_layout</field>
    </record>

    <!-- Custom Report Action -->
    <record id="action_report_custom_inventory_transfer" model="ir.actions.report">
        <field name="name">Custom Inventory Transfer PDF</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">meta_whatsapp_inventory.report_custom_inventory_transfer</field>
        <field name="print_report_name">'Transfer - %s' % (object.name)</field>
    </record>

    <!-- Custom Report Template -->
    <template id="report_custom_inventory_transfer">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Transfer: <span t-field="doc.name"/></h2>
                        <p>Contact: <span t-field="doc.partner_id.name"/></p>
                        <p>Scheduled Date: <span t-field="doc.scheduled_date"/></p>
                        <p>Source Location: <span t-field="doc.location_id.name"/></p>
                        <p>Destination Location: <span t-field="doc.location_dest_id.name"/></p>
                        <p>State: <span t-field="doc.state"/></p>
                        <h3>Transfer Lines</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.move_line_ids" t-as="line">
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td><span t-field="line.quantity"/></td>
                                    <td><span t-field="line.product_uom_id.name"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>