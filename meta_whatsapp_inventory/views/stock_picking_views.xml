<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_whatsapp" model="ir.ui.view">
        <field name="name">stock.picking.form.whatsapp</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_validate']" position="after">
                <button name="action_send_whatsapp" string="Send by WhatsApp" type="object" class="btn-primary"
                        icon="fa-whatsapp"/>
            </xpath>
        </field>
    </record>
</odoo>